<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tushar2899.mimarathi">

    <application
        android:allowBackup="true"
        android:icon="@drawable/marathi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NumberActivity"
            android:label="@string/category_numbers"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".FamilyActivity"
            android:label="@string/category_family"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PhrasesActivity"
            android:label="@string/category_phrases"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ColorsActivity"
            android:label="@string/category_colors"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>